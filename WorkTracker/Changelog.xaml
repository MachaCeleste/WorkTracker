<Window x:Class="WorkTracker.Changelog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkTracker"
        mc:Ignorable="d"
        Title="Changelog" Height="300" Width="200" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Changes" Grid.Row="0">
            <TextBox Name="ChangesBox" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Margin="2"/>
        </GroupBox>
        <Button Content="Submit" Grid.Row="1" Height="20" Width="100" Margin="5" Click="Submit_Click"/>
    </Grid>
</Window>
