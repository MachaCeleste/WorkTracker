<Window x:Class="WorkTracker.JobViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkTracker"
        xmlns:utils="clr-namespace:WorkTracker.Utils"
        mc:Ignorable="d"
        Title="{Binding JobName}" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="{Binding ID}" Grid.Row="0" Grid.ColumnSpan="99" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Description:" Grid.Column="0" Grid.Row="0"/>
                <TextBlock Text="{Binding Description}" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="99" Margin="3"/>
                <Label Content="Creator:" Grid.Column="0" Grid.Row="1"/>
                <TextBlock Text="{Binding Creator}" Grid.Column="1" Grid.Row="1" Margin="3" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Label Content="Created:" Grid.Column="2" Grid.Row="1"/>
                <TextBlock Text="{Binding Created}" Grid.Column="3" Grid.Row="1" Margin="3" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <CheckBox Content="Public" IsChecked="{Binding IsPublic}" IsEnabled="False" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5"/>
            </Grid>
        </GroupBox>
        <ScrollViewer Grid.Row="1" Grid.ColumnSpan="99">
            <ItemsControl ItemsSource="{Binding Sessions}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type utils:Session}">
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="5">
                            <StackPanel>
                                <TextBlock Text="{Binding UserID}" FontWeight="Bold"/>
                                <TextBlock Text="ID:"/>
                                <TextBlock Text="{Binding ID}"/>
                                <TextBlock Text="{Binding StartTime}"/>
                                <TextBlock Text="{Binding EndTime}"/>
                                <TextBlock Text="{Binding Duration}"/>
                                <TextBlock Text="{Binding Notes}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <Button Name="StartSessionButton" Grid.Row="2" Grid.Column="0" Content="Start Session" Click="StartSession_Click"/>
        <Button Name="EndSessionButton" Grid.Row="2" Grid.Column="1" Content="End Session" IsEnabled="False" Click="EndSession_Click"/>
    </Grid>
</Window>
