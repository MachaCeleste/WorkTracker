<Window x:Class="WorkTracker.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkTracker"
        mc:Ignorable="d"
        Title="Please Login" Height="200" Width="500" ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Welcome to Celestial Corp Work Tracker" Grid.ColumnSpan="99" Grid.Row="0" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>

        <Label Content="Username" Grid.Column="0" Grid.Row="1" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Password" Grid.Column="0" Grid.Row="2" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center"/>

        <TextBox Name="UserBox" Grid.Column="1" Grid.Row="1" Height="25" Width="200" Margin="5,0"/>
        <PasswordBox Name="PassBox" Grid.Column="1" Grid.Row="2" Height="25" Width="200" Margin="5,0"/>

        <Button Content="Login" Click="Login_Click" Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" Height="30" Width="100" Margin="5"/>
    </Grid>
</Window>
