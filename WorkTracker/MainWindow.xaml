<Window x:Class="WorkTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkTracker"
        xmlns:utils="clr-namespace:WorkTracker.Utils"
        mc:Ignorable="d"
        Title="Work Tracker" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Grid.ColumnSpan="99" Height="20">
            <MenuItem Header="System">
                <MenuItem Header="New Job" Click="NewJob_Click"/>
                <MenuItem Header="View Job" Click="ViewJob_Click"/>
                <MenuItem Header="Delete Job" Click="DeleteJob_Click"/>
                <Separator/>
                <MenuItem Header="Refresh" Click="Refresh_Click"/>
            </MenuItem>
            <MenuItem Header="Account">
                <MenuItem Header="{Binding Username}" HorizontalAlignment="Center"/>
                <MenuItem Header="{Binding SessionTotal}" HorizontalAlignment="Right"/>
                <Separator/>
                <MenuItem Header="Delete User" Click="DeleteUser_Click"/>
            </MenuItem>
        </Menu>
        <ListBox Name="JobsViewer" ItemsSource="{Binding Jobs}" Grid.Row="1" Grid.ColumnSpan="99">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type utils:Job}">
                    <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="5">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="ID:" Foreground="Gray"/>
                            <TextBlock Text="{Binding ID}"/>
                            <TextBlock Text="{Binding Creator}"/>
                            <TextBlock Text="{Binding Created}"/>
                            <RadioButton Content="Public" IsChecked="{Binding IsPublic}" IsEnabled="False"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
